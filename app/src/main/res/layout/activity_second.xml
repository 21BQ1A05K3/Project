<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/bg3"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/from"
        android:layout_width="72dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/fromto"
        android:text="from"
        android:textAlignment="center"
        android:textColor="@color/white" />


    <TextView
        android:id="@+id/_currency_Name_TextView"
        android:layout_width="381dp"
        android:layout_height="47dp"
        android:layout_marginTop="30dp"
        android:hint="currency name"
        android:padding="5dp"
        android:background="@drawable/button"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="20dp" />
    <TextView
        android:id="@+id/to"
        android:layout_width="72dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/fromto"
        android:text="to"
        android:layout_marginTop="20dp"
        android:textAlignment="center"
        android:textColor="@color/white" />

    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="292dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/button"
        android:minHeight="48dp"
        android:textAlignment="center" />


    <EditText

        android:id="@+id/_value"
        android:layout_width="377dp"
        android:layout_height="52dp"
        android:layout_marginTop="30dp"
        android:hint="Enter currency value"
        android:background="@drawable/text"
        android:inputType="numberDecimal"
        android:textAlignment="center"
         />


    <Button
        android:id="@+id/_convert_Button"
        android:layout_width="254dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/button"
        android:text="Convert"
        android:textColor="@color/white" />

    <EditText
        android:id="@+id/_currency_Edit_Text"
        android:layout_width="368dp"
        android:layout_height="55dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/text"
        android:hint="converted value"
        android:inputType="numberDecimal"
        android:textAlignment="center" />

    <Button
        android:id="@+id/_more_Info_Button"
        android:layout_width="121dp"
        android:layout_height="48dp"
        android:layout_gravity="right"
        android:layout_marginTop="39dp"
        android:background="@drawable/button"
        android:text="More Info"

        android:textColor="@color/white" />

    <Button
        android:id="@+id/bac"
        android:layout_width="80dp"
        android:layout_height="48dp"
        android:layout_gravity="left"
        android:layout_marginBottom="20dp"
        android:background="@drawable/button"
        android:minHeight="48dp"
        android:onClick="MainActivity"
        android:text="back" />

</LinearLayout>